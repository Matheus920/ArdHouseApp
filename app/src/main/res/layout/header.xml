<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    tools:context=".ardhouse.activity.MainActivity"
    android:background="@color/colorMenu"
    android:layout_gravity="top"
    android:padding="5dp">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="20dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ardhouselogo"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/montserratregular"
        android:text="Menu"
        android:textColor="@color/colorSubTitle"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/lblArduinoAtual"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lblArduinoAtual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/montserratregular"
        android:text="@string/arduinoatual"
        android:textColor="@color/colorSubTitle"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lblNomeArduino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textColor="@color/colorSubTitle"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="13dp"
        app:layout_constraintStart_toEndOf="@+id/lblArduinoAtual" />

</androidx.constraintlayout.widget.ConstraintLayout>