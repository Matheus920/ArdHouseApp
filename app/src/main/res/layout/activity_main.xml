<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swiperefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ardhouse.activity.MainActivity"
        android:fitsSystemWindows="true">

        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:id="@+id/nav_view"
            android:layout_gravity="start"
            android:theme="@style/navigationTheme"
            android:layout_height="match_parent"
            app:headerLayout="@layout/header"
            app:menu="@menu/main_menu"
            />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
            android:background="#F5F5F5">

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/colorArduinoClaro"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/imagehometitle"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:src="@drawable/hometitle"
                app:layout_constraintBottom_toBottomOf="@+id/view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/view" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratealternatesregular"
                android:text="@string/ardhouse"
                android:textAlignment="center"
                android:textColor="@color/colorText"
                android:textSize="32sp"
                app:layout_constraintBottom_toTopOf="@+id/subtitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.8" />


            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/montserratealternatesregular"
                android:text="@string/sub_title"
                android:textColor="@color/colorSubTitle"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar"/>

            <TextView
                android:layout_margin="30dp"
                android:id="@+id/devicestatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratregular"
                android:text="@string/estado_dispositivos"
                android:textColor="@color/colorText"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <ImageButton
                android:id="@+id/btnLampada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:background="@drawable/buttonshape"
                android:elevation="10dp"
                android:foreground="@drawable/lampada_icon"
                android:foregroundGravity="center"
                android:onClick="mudarEstadoLampada"
                app:layout_constraintBottom_toTopOf="@+id/button_porta"
                app:layout_constraintEnd_toStartOf="@+id/button_alarme"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/devicestatus" />

            <ImageButton
                android:id="@+id/button_porta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:background="@drawable/buttonshape"
                android:elevation="10dp"
                android:foreground="@drawable/porta_icon"
                android:foregroundGravity="center"
                android:onClick="abrirPorta"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/button_alarme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:background="@drawable/buttonshape"
                android:elevation="10dp"
                android:foreground="@drawable/alarme_icon"
                android:foregroundGravity="center"
                android:onClick="mudarEstadoAlarme"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.444"
                app:layout_constraintStart_toEndOf="@+id/button_porta" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:src="@drawable/ventilador"
                app:layout_constraintBottom_toBottomOf="@+id/button_ventilador"
                app:layout_constraintEnd_toEndOf="@+id/button_ventilador"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/button_ventilador"
                app:layout_constraintTop_toTopOf="@+id/button_ventilador"
                app:layout_constraintVertical_bias="1.0" />

            <LinearLayout
                android:id="@+id/button_ventilador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:background="@drawable/buttonshape"
                android:elevation="10dp"
                android:onClick="controlarVentilador"
                app:layout_constraintBottom_toTopOf="@+id/button_alarme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toEndOf="@+id/btnLampada"
                app:layout_constraintTop_toBottomOf="@+id/devicestatus"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="20dp"
                    android:src="@drawable/ventilador"
                    app:layout_constraintBottom_toBottomOf="@+id/button_ventilador"
                    app:layout_constraintEnd_toEndOf="@+id/button_ventilador"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/button_ventilador"
                    app:layout_constraintTop_toTopOf="@+id/button_ventilador"
                    app:layout_constraintVertical_bias="1.0" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_lampada_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratregular"
                android:text="@string/lampada"
                android:textColor="@color/colorSubTitle"
                app:layout_constraintBottom_toTopOf="@+id/button_porta"
                app:layout_constraintEnd_toEndOf="@+id/btnLampada"
                app:layout_constraintHorizontal_bias="0.516"
                app:layout_constraintStart_toStartOf="@+id/btnLampada"
                app:layout_constraintTop_toBottomOf="@+id/btnLampada" />


            <TextView
                android:id="@+id/txt_ventilador_ligado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratregular"
                android:text="@string/ventilador"
                android:textColor="@color/colorSubTitle"
                app:layout_constraintBottom_toTopOf="@+id/button_alarme"
                app:layout_constraintEnd_toEndOf="@+id/button_ventilador"
                app:layout_constraintStart_toStartOf="@+id/button_ventilador"
                app:layout_constraintTop_toBottomOf="@+id/button_ventilador" />

            <TextView
                android:id="@+id/txt_porta_aberta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratregular"
                android:text="@string/porta"
                android:textColor="@color/colorSubTitle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/button_porta"
                app:layout_constraintStart_toStartOf="@+id/button_porta"
                app:layout_constraintTop_toBottomOf="@+id/button_porta" />

            <TextView
                android:id="@+id/text_alarme_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratregular"
                android:text="@string/alarme"
                android:textColor="@color/colorSubTitle"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/button_alarme"
                app:layout_constraintStart_toStartOf="@+id/button_alarme"
                app:layout_constraintTop_toBottomOf="@+id/button_alarme" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.drawerlayout.widget.DrawerLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>