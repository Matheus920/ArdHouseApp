<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swiperefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.usp.ardhouse.activity.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.145"
        android:background="@color/colorGray2">

        <View
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="5dp"
            android:foreground="@drawable/ardhousefundobranco" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.52"
        android:background="@color/colorArduino"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <ImageView
                android:id="@+id/image_termometro"
                android:layout_alignParentLeft="true"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:background="@drawable/termometro"/>

            <TextView
                android:textSize="24dp"
                android:layout_marginTop="22dp"
                android:layout_toRightOf="@id/image_termometro"
                android:id="@+id/text_temperatura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20ยบ"
                android:textColor="@color/colorGray" />

            <ImageView
                android:id="@+id/image_umidade"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/umidade"
                android:layout_below="@id/image_termometro"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/image_umidade"
                android:id="@+id/text_umidade"
                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_termometro"
                android:text="30%"
                android:textSize="24dp"
                android:textColor="@color/colorGray" />

            <TextView
                android:layout_marginLeft="110dp"
                android:id="@+id/text_ultima_atualizacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/data"
                android:textColor="@color/colorGray" />

            <TextView
                android:id="@+id/text_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/text_ultima_atualizacao"
                android:textColor="@color/colorGray" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="0.4"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnLampada"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/botao_customizado"
                    android:foreground="@drawable/lampada"
                    android:onClick="mudarEstadoLampada" />

                <ImageButton
                    android:id="@+id/button_porta"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/botao_customizado"
                    android:foreground="@drawable/porta"
                    android:tint="@color/colorWhite" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/button_ventilador"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/botao_customizado"
                    android:foreground="@drawable/ventilador"
                    android:onClick="controlarVentilador"
                    android:tint="@color/colorWhite" />

                <ImageButton
                    android:id="@+id/button_alarme"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/botao_customizado"
                    android:foreground="@drawable/alarme"
                    android:tint="@color/colorWhite" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.16"
        android:background="@color/colorArduino"
        android:orientation="vertical"
        android:padding="25dp">

        <Button
            android:onClick="selecionarArduino"
            android:id="@+id/btnSelecionarArduino"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/botao_customizado"
            android:text="@string/selecionar"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lblArduinoAtual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/arduinoatual"
                android:textColor="@color/colorGray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lblNomeArduino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/lblArduinoAtual"
                android:text=""
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>